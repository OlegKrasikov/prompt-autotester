# Copy to ".env" and fill in values

# Database (PostgreSQL URL)
DATABASE_URL="postgresql://USER:PASSWORD@HOST:PORT/DBNAME?sslmode=require"

# Better Auth
BETTER_AUTH_SECRET="generate_a_strong_secret"
BETTER_AUTH_URL="http://localhost:3000"

# Encryption for API keys (required)
# Must be a strong, private secret. Do NOT commit.
# Generate (any option):
# - openssl rand -hex 32
# - openssl rand -base64 32
# - node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
# - python - <<'PY'
#   import secrets; print(secrets.token_hex(32))
#   PY
ENCRYPTION_KEY="<paste_generated_value>"

# Feature flags (optional; defaults shown)
ORG_SHADOW_MODE=true
ENFORCE_ORG_CONTEXT=false
RBAC_ENFORCEMENT=false
INVITE_FLOW_ENABLED=false
